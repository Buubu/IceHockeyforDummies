<?xml version="1.0" encoding="utf-8"?>
<!-- Root container for the activity, define the menu -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="bum.icehockeyfordummies.user_interface.MainActivity">


    <!-- Define the layout of the screen (the menu slides over it) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Add the toolbar on the screen -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:theme="@style/ToolbarStyle" />


        <!-- The FrameLayout is the container of the screens -->
        <FrameLayout
            android:id="@+id/screen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!-- Define the contents of the menu -->
    <android.support.design.widget.NavigationView
        android:id="@+id/menu_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_items"
        app:headerLayout="@layout/menu_header"
        app:itemTextColor="@color/menu_text_state"
        app:itemIconTint="@color/menu_text_state" />
</android.support.v4.widget.DrawerLayout>
